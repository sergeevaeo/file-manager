<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.vk.filemanager.MainActivity">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/fileList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            tools:listitem="@layout/file_item" tools:layout_editor_absoluteY="-232dp"
            tools:layout_editor_absoluteX="-146dp"/>
    <ImageButton
            android:layout_width="80dp"
            android:layout_height="79dp" app:srcCompat="@drawable/sorting" android:id="@+id/sorting"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@+id/fileList"
            app:layout_constraintBottom_toBottomOf="@+id/fileList"
            app:layout_constraintStart_toStartOf="@+id/fileList" app:layout_constraintEnd_toEndOf="@+id/fileList"
            app:layout_constraintHorizontal_bias="0.883" app:layout_constraintVertical_bias="0.923"/>


</android.support.constraint.ConstraintLayout>